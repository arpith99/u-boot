config MACH_S32
	bool
	select ARM64
	select DM

config SYS_VENDOR
	string
	default "nxp"

config NXP_S32CC
	bool
	imply MISC
	select BINMAN
	select CLK
	select CLK_SCMI
	select DM_GPIO
	select FSL_LINFLEXUART
	select FSL_USDHC
	select MACH_S32
	select MMC_HS400_ES_SUPPORT
	select MMC_HS400_SUPPORT
	select OF_CONTROL
	select PINCTRL
	select PINCTRL_FULL
	select PINCTRL_S32CC
	select S32CC_GPIO
	select SCMI_FIRMWARE
	select SYSRESET
	select SYSRESET_PSCI

source "arch/arm/mach-s32/s32-cc/Kconfig"
