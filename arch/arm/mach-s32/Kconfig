config MACH_S32
	bool
	select ARM64
	select DM

config SYS_VENDOR
	string
	default "nxp"

config NXP_S32CC
	bool
	imply DM_I2C
	imply FSL_DSPI
	imply MISC
	imply MP
	imply NXP_S32CC_PIT_TIMER
	imply SPI
	imply SYS_I2C_MXC
	imply TIMER
	select CLK
	select CLK_SCMI
	select CPU
	select DISTRO_DEFAULTS
	select DM_GPIO
	select DM_SPI
	select DM_SPI_FLASH
	select FSL_LINFLEXUART
	select FSL_QSPI
	select FSL_QSPI_AHB_FULL_MAP
	select FSL_USDHC
	select HUSH_PARSER
	select MACH_S32
	select MMC_HS400_ES_SUPPORT
	select MMC_HS400_SUPPORT
	select OF_BOARD
	select OF_CONTROL
	select OF_SYSTEM_SETUP
	select PINCTRL
	select PINCTRL_FULL
	select PINCTRL_S32CC
	select S32CC_GPIO
	select SCMI_FIRMWARE
	select SPI_FLASH
	select SPI_FLASH_SFDP_SUPPORT
	select SPI_MEM
	select SYSRESET
	select SYSRESET_PSCI

source "arch/arm/mach-s32/s32-cc/Kconfig"
